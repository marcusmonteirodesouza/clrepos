{
  "name": "clrepos",
  "version": "1.0.5",
  "description": "Clone GitHub repositories via Command Line",
  "main": "src/index.js",
  "scripts": {
    "format": "prettier --write ./**/*.{json,md}",
    "lint": "xo --fix",
    "test": "npm run lint"
  },
  "bin": {
    "clrepos": "src/index.js"
  },
  "keywords": [
    "git",
    "github",
    "cli"
  ],
  "author": "Marcus Vinicius Monteiro de Souza",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^17.0.0",
    "commander": "^4.1.1",
    "dotenv": "^8.2.0",
    "mkdirp": "^1.0.3",
    "nodegit": "^0.26.4",
    "prompts": "^2.3.1"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "xo": "^0.26.1"
  },
  "xo": {
    "prettier": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.{json,md}": "prettier --write",
    "*.js": "xo --fix"
  }
}
